{
  "name": "amy",
  "version": "1.0.0",
  "description": "Custom Recruitment & Candidate Management Platform - Monorepo",
  "private": true,
  "scripts": {
    "dev:api": "pnpm -C apps/api dev",
    "dev:web": "pnpm -C apps/web dev",
    "dev:app": "pnpm -C apps/app dev",
    "dev:admin": "pnpm -C apps/admin dev",
    "dev": "concurrently -k -n API,WEB,APP,ADMIN \"pnpm dev:api\" \"pnpm dev:web\" \"pnpm dev:app\" \"pnpm dev:admin\"",
    "build": "turbo run build",
    "start": "concurrently -k -n API,APP,ADMIN \"pnpm -C apps/api start\" \"pnpm -C apps/app start\" \"pnpm -C apps/admin start\"",
    "db:generate": "pnpm --filter @amy/db db:generate",
    "db:migrate": "pnpm --filter @amy/db db:migrate:deploy",
    "db:seed": "pnpm --filter @amy/db db:seed",
    "db:studio": "pnpm --filter @amy/db db:studio",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check"
  },
  "devDependencies": {
    "@tanstack/react-query-devtools": "^5.85.3",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@vitest/ui": "^1.3.1",
    "concurrently": "^9.0.0",
    "jsdom": "^24.0.0",
    "tsx": "^4.7.0",
    "turbo": "^2.0.0",
    "vitest": "^1.3.1"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748",
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "axios": "^1.11.0",
    "react-hook-form": "^7.62.0",
    "sonner": "^2.0.7",
    "zod": "^3.25.76"
  }
}
