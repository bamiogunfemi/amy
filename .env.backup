NODE_ENV=development
SESSION_SECRET=amy-session-secret-key-change-in-production

# Database
DATABASE_URL=postgresql://amy:amy@localhost:5432/amy

# Google OAuth
GOOGLE_CLIENT_ID=...
GOOGLE_CLIENT_SECRET=...
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Google Drive
GOOGLE_DRIVE_SCOPE=https://www.googleapis.com/auth/drive.readonly

# Airtable
AIRTABLE_PAT=...

# Sheets
GOOGLE_SHEETS_AUTH=oauth   # or 'service'
GOOGLE_SERVICE_ACCOUNT_JSON_BASE64=

# Storage (S3 or local)
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=amy-cv
S3_ACCESS_KEY=...
S3_SECRET_KEY=...
S3_REGION=us-east-1

# Mail (dev)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=...
SMTP_PASS=...
SMTP_FROM=noreply@amy.com

# Plans / Trials / Limits
TRIAL_DAYS_DEFAULT=14
FREE_CANDIDATE_LIMIT=200
DAILY_IMPORT_LIMIT=300

# Redis (optional, for background jobs)
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=your-jwt-secret-key
COOKIE_SECRET=your-cookie-secret-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
